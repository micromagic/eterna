<!--
查询测试
-->
<eterna-config>
   <factory>

      <objs>

         <query name="multi.query" generator="self.micromagic.eterna.sql.EmptyQuery">
            <prepared-sql>
               select when tn.userMemo is null #sub[and $] then 1 else 2 end as userMemo
               from TSP_CHARGE_NAMELIST nl
               where nl.payFlag &gt;= 0 and userId = ?
                     #sub[and $] <!-- 查询条件的位置 -->
                     #sub[and $] <!-- 权限设置的位置 -->
               order by tn.orderIndex, nl.userId
            </prepared-sql>
            <parameters>
               <parameter name="userId" type="String"/>
            </parameters>
         </query>

         <search name="multi.search.sub" queryName="multi.query" pageSize="15" conditionIndex="1"
            searchManager="multi" specialCondition="true" countType="count">
            <condition-propertys>
               <condition-property name="defaultMemo" colName="1" colType="int" useDefaultBuilder="false"/>
            </condition-propertys>
         </search>
         <search name="multi.search" queryName="multi.query" pageSize="15" conditionIndex="2"
            searchManager="multi" specialCondition="true" countType="count">
            <other-search-manager otherName="multi.search.sub"/>
            <condition-propertys>
               <condition-property name="defaultMemo" colType="int" caption="默认备注" defaultBuilder="util.Save"/>
               <condition-property name="projectName" colType="String" caption="项目" defaultBuilder="util.Save"/>
               <condition-property name="projectId" colName="p.projectId" colType="long" caption="项目Id" defaultBuilder="util.IN" visible="false"/>
					<condition-property name="userId" colName="nl.userId" colType="String" caption="编号" defaultBuilder="util.IN"/>
					<condition-property name="userName" colName="nl.userName" colType="String" caption="姓名"/>
               <condition-property name="chargeYear" colName="p.chargeYear" colType="int" caption="收费年度" inputType="select_year"/>
               <condition-property name="content" colName="c.id" colType="String" inputType="select" caption="收费内容">
                  <attribute name="initParam" value="optionsList:'code.content'"/>
               </condition-property>
               <condition-property name="deptName" colName="d.id" colType="String" caption="收费部门" inputType="select">
                   <attribute name="initParam" value="optionsList:'deptNameData'"/>
               </condition-property>
               <condition-property name="paperType" colName="pt.id" colType="int" inputType="select" caption="票据模板" defaultValue="1">
                  <attribute name="initParam" value="optionsList:'code.paperType',selectDefault:[],defaultValue:'1'"/>
                  <attribute name="cellSize" value="1,3"/>
               </condition-property>
            </condition-propertys>
            <parameter-setting className="self.micromagic.eterna.search.impl.SearchParamSetting"/>
         </search>

      </objs>
      
      <attributes>
      </attributes>

   </factory>
</eterna-config>
